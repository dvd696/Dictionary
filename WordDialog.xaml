<ContentDialog CornerRadius="3"
    x:Class="CustomDictionary.WordDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CustomDictionary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title=";)"
    PrimaryButtonText="Submit"
    CloseButtonText="Cancel"
    SecondaryButtonText="Delete"
    SecondaryButtonClick="ContentDialog_SecondaryButtonClick"
    PrimaryButtonClick="ContentDialog_PrimaryButtonClick">

    <Grid>
        <StackPanel Orientation="Vertical">
            <TextBlock x:Name="lblId" Visibility="Collapsed"/>
            <TextBox x:Name="txtWord" HorizontalAlignment="Stretch" PlaceholderText="Content" CornerRadius="3" Margin="0,5"/>
            <TextBox x:Name="txtTranslate" HorizontalAlignment="Stretch" PlaceholderText="Translate Split ," CornerRadius="3" Margin="0,5"/>
        </StackPanel>
    </Grid>
</ContentDialog>
